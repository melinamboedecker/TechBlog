

{{#if comments.length}}
  <div class="col-md-6 project-list">
    <h3>Comments:</h3>

   
    {{#each comments as |comment| }}
<div class="row mb-4 comment">
  <div class="col-md-5">
    {{!-- <h2>
      _____________________________________________________________________
    </h2> --}}
    <p>Comment by {{comment.username}} on {{format_date comment.date_created}}:</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.text}}
    </p>
  </div>
</div>
{{/each}}
  
  </div>
{{/if}}