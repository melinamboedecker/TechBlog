<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>


{{#if current_users_post}}
<form class="form update-post-form">
  <div class="col-md-4">
      <div class="form-goup">
        <button class="btn btn-sm btn-success" data-id="{{post.id}}">Update Post</button>
      </div>
  </div>
</form>
{{/if}}


