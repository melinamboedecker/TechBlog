<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update Your Post:</h3>

    <form class="form update-post-form">
      <div class="form-group">
        <label for="post-name">post title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="post-content">content:</label>
        <textarea class="form-input" id="post-content" name="post-content">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
  </div>

  <script src="/js/update.js"></script>